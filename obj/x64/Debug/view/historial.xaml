<Page
    x:Class="uwpIntentoNuevo.view.historial"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpIntentoNuevo.DB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Frame x:ConnectionId='2' x:Name="frame">
        <Grid Background="#1c212a">
            <!--Titulo-->
            <Grid Margin="20, 15" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                </Grid.ColumnDefinitions>
                <TextBlock 
                    Grid.Column="1"
                    Grid.Row="0"
                    Text="Historial de Ensayos" Foreground="#fff"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="27" FontFamily="Italic" />
            </Grid>
            <!--Filtro-->
            <Grid Margin="20 40 20 0" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>




                <TextBox  
                    Margin="10" 
                    Grid.Column="0"
                    Grid.Row="0"
                    FontSize="18"
                    PlaceholderText="Nombre del ensayo" 
                    Text="{Binding NombreEnsayo}"
                    />

                <ComboBox IsEditable="True"                     Grid.Column="1"
                    Grid.Row="0"                    Margin="10" 


                       FontSize="18" Height="60" Width="330"  Grid.ColumnSpan="2">
                    <ComboBoxItem Content="Tipo 1"/>
                    <ComboBoxItem Content="Tipo 2"/>
                    <ComboBoxItem Content="Tipo 3"/>
                </ComboBox>

                <ComboBox IsEditable="True"
                          Margin="10"
                          Grid.Column="2"
                    Grid.Row="0"
                       FontSize="18" Height="60" Width="330"  Grid.ColumnSpan="2">
                    <ComboBoxItem Content="Tipo 1"/>
                    <ComboBoxItem Content="Tipo 2"/>
                    <ComboBoxItem Content="Tipo 3"/>
                </ComboBox>

                <Button     
                    Content="Buscar"
                    Grid.Row="0"
                    Grid.Column="3"
                    Background="#04D976"
                    FontSize="16"
                    Foreground="#fff"
                    FontFamily="Bold"
                    Padding="75,15"
                    Command="{Binding Search}" VerticalAlignment="Center" HorizontalAlignment="Center"
                />
            </Grid>
            <!--Categorias-->
            <ListView x:ConnectionId='3' x:Name="EnsayosListView" Margin="20 130 20 0" ItemsSource="{Binding data}" >
                <ListView.Header>
                    <Grid Background="#8979F2" Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center"   Text="Fecha"/>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center"  Text="PAT" Grid.Column="1" Grid.ColumnSpan="2" Height="21" Margin="10,10,278,0" VerticalAlignment="Top"/>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center" Text="Valor PAT" Grid.Column="2"/>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center"  Text="CFP" Grid.Column="3" />
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center" Text="Valor CFP" Grid.Column="4"/>
                    </Grid>
                </ListView.Header>
                <!--Datos-->
                <ListView.ItemTemplate>
                    <DataTemplate                                  >
                        <Grid x:ConnectionId='5'>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                <TextBlock x:ConnectionId='6' FontSize="17" HorizontalTextAlignment="Center"                             />
                                <TextBlock x:ConnectionId='7' FontSize="17" HorizontalTextAlignment="Center"                              Grid.Column="1"/>
                                <TextBlock x:ConnectionId='8' FontSize="17" HorizontalTextAlignment="Center"                              Grid.Column="2" />
                                <TextBlock x:ConnectionId='9' FontSize="17" HorizontalTextAlignment="Center"                              Grid.Column="3"/>
                                <TextBlock x:ConnectionId='10' FontSize="17" HorizontalTextAlignment="Center"                              Grid.Column="4"/>
                                </Grid>
                            </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!--<ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>-->

            </ListView>

        </Grid>
    </Frame>
</Page>

