                    SelectedItem="{Binding FechaEnsayo}"
                    >
                        <Picker.Items>
                            <x:String>Ascendente</x:String>
                            <x:String>Descendente</x:String>
                        </Picker.Items>
                    </Picker>-->
                <Button     
                    Content="Buscar"
                    Grid.Row="0"
                    Grid.Column="3"
                    Background="#04D976"
                    FontSize="16"
                    Foreground="#fff"
                    FontFamily="Bold"
                    Margin="0,27,0,0"
                    Command="{Binding Search}"
                />
            </Grid>
            <ListView x:ConnectionId='3' x:Name="EnsayosListView" Margin="20,0" ItemsSource="{Binding EnsayosList}" >
                <ListView.Header>
                    <Grid Background="#8979F2" Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center"   Text="Fecha"/>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center"  Text="PAT" Grid.Column="1"/>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center" Text="Valor PAT" Grid.Column="2"/>
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center"  Text="CFP" Grid.Column="3" />
                        <TextBlock FontSize="17" FontFamily="Bold" HorizontalTextAlignment="Center" Text="Valor CFP" Grid.Column="4"/>
                    </Grid>
