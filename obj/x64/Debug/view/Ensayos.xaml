<Page
    x:Class="uwpIntentoNuevo.view.Ensayos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpIntentoNuevo.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="759.69">

    <Frame x:ConnectionId='2' x:Name="frame">

        <Grid Background="#1c212a">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions >
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button x:ConnectionId='3'     
                    Content="Salir"
                    Grid.Row="0"
                    Background="#04D976"
                    FontSize="20"
                    Foreground="#fff"
                    FontFamily="Bold"
                    Padding="50,10"
                    VerticalAlignment="Top" Margin="20,20,0,0"
                                          
                />
            <TextBlock Text="Seleccionar los ensayos a realizar :"
                           Foreground="#fff"
                           FontSize="18"
                           Grid.Column="1"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                       />
            <Grid Grid.Column="0" Grid.Row="1">
                <TextBlock Foreground="White"
                               Grid.Column="2"
                               VerticalAlignment="Top"
                               FontSize="19"
                               Text="Corriente de Fuga Pasiva"
                               HorizontalAlignment="Right"
                           />
                <CheckBox IsChecked="{Binding IsFugaChecked}"
                                  Background="#8979F2"
                               HorizontalAlignment="Right"
                                   Margin="0,0,0,0"
                                  />

            </Grid>
            <Grid Grid.Column="2" Grid.Row="1">
                <TextBlock Foreground="White"
                               VerticalAlignment="Top"
                               FontSize="19"
                               Text="Resitencia de Puesta a Tierra"
                               HorizontalAlignment="Left"
                           />
                <CheckBox   Background="#8979F2"
Margin="110,0,0,0"
                            HorizontalAlignment="Left"
                                    IsChecked="{Binding IsPATChecked}"/>

            </Grid>
            <Button x:ConnectionId='4' Content="Comenzar ensayo/s"
                        Grid.Column="1"
                    Grid.Row="2"
HorizontalAlignment="Center"
                        Background="#04D976"
                        Foreground="White"
                        FontSize="20"
                        CornerRadius="10"
                        Command="{Binding Ensayar}"
                        Padding="90, 30"
                                            
                        />

        </Grid>

    </Frame>
</Page>


