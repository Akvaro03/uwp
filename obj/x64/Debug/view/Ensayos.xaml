<Page
    x:Class="uwpIntentoNuevo.view.Ensayos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpIntentoNuevo.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" d:DesignHeight="759.69">

    <Frame x:ConnectionId='2' x:Name="frame" Margin="0,0,0,264">

        <Grid Margin="0,0,0,41">
            <Grid Background="#1c212a" Margin="0,0,0,-307">

                <Grid HorizontalAlignment="Center"
                             Margin="100,0,0,0">
                    <TextBlock Text="Seleccionar los ensayos a realizar :"
                           Foreground="#fff"
                           FontSize="18" Margin="-31,67,31,-67" />


                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <!--Checkbox 1-->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.8*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                        </Grid>


                        <!--Checkbox 2-->

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="0.8*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <CheckBox IsChecked="{Binding IsFugaChecked}"
                                  Background="#8979F2"
                                  HorizontalAlignment="Right" Grid.Column="2" Margin="0,335,-367,0" VerticalAlignment="Top" 
                                  />
                            <TextBlock Foreground="White"
                               Grid.Column="2"
                               VerticalAlignment="Top"
                               FontSize="19"
                               Text="Corriente de Fuga Pasiva" Margin="181,232,-387,0" />
                        </Grid>


                    </Grid>



                </Grid>

                <Grid Margin="0,0,0,-292">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Button x:ConnectionId='3' Content="Comenzar ensayo/s"
                        Grid.Column="0"
                        Background="#04D976"
                        Foreground="White"
                        FontSize="20"
                        CornerRadius="10"
                        Command="{Binding Ensayar}"
                        Padding="90, 30"
                        Grid.ColumnSpan="2" Margin="441,500,0,0" Grid.Row="1" VerticalAlignment="Top" Height="151" Width="553"                     
                        />
                    <CheckBox   Background="#8979F2"
                                    IsChecked="{Binding IsPATChecked}" Margin="0,326,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="White"
                               VerticalAlignment="Top"
                               FontSize="19"
                               Text="Resitencia de Puesta a Tierra" Margin="209,250,243,0" Grid.Row="1" />

                    <!--&#xf0eb;-->

                </Grid>
                <Grid Margin="58, 0"
                  VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                </Grid>

            </Grid>
        </Grid>

    </Frame>
</Page>

