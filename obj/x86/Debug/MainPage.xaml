<Page
    x:Class="uwpIntentoNuevo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uwpIntentoNuevo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Frame x:ConnectionId='2' x:Name="frame">
        <StackPanel Background="#1c212a" HorizontalAlignment="Center">
            <Grid Margin="10, 15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.2*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Consultar SRL" Foreground="#fff"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18" FontStyle="Italic" />
            </Grid>

            <Grid Margin="30,0" Height="937" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='3'
                        FontSize="24"
                        Width="150"
                        FontFamily="FAS"
                        Background="#8979F2"
                        CornerRadius="5"
                        x:Name="btn1"
                        Content="&#xf013;"
                                                  Margin="0,185,0,0" VerticalAlignment="Top" Grid.Column="2" HorizontalAlignment="Center"/>

                <Button Content="Ensayos"
                        Background="#04D976"
                        Padding="0,20"
                        FontSize="18"
                        FontWeight="Bold"
                        CornerRadius="5"
                        VerticalAlignment="Top" Margin="0,469,0,0" Width="571" Height="101" Grid.Column="1" HorizontalAlignment="Center"  />
                <Button x:ConnectionId='4'
                        VerticalAlignment="Top"  RenderTransformOrigin="0.408,1.019"
                        FontSize="24"
                        Width="150"
                        FontFamily="FAS"
                        Background="#8979F2"
                        CornerRadius="5"
                        Content="&#xF013;"
                        x:Name="btn2"
                                                  Margin="0,185,0,0" HorizontalAlignment="Center"/>
            </Grid>
            <Grid Width="1459" Height="514">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding ClientName}" Grid.Column="7" HorizontalAlignment="Right" FontSize="16"
                   Foreground="#11D990" FontWeight="Bold" VerticalAlignment="Center"/>

            </Grid>

        </StackPanel>

    </Frame>
</Page>

